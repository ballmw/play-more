    $('#clock').stopwatch()
    
    # http://www.thecssninja.com/javascript/geolocation-iphone
    navigator.geolocation.getCurrentPosition(success, fail)
    
    success = (position) ->
    	alert("Your latitude: " + position.coords.latitude + "longitude: "
     		+ position.coords.longitude);
  </script>